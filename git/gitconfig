[alias]
  st = status
  
  co = checkout
  main = !git branch-get-default | xargs git switch $1
  feature = !sh -c 'git main && git pull && git switch -c feature/$1' - 
  bugfix = !sh -c 'git main && git pull && git switch -c bugfix/$1' - 
  mainrebase = !sh -c 'CURRENT=$(git branch-current) && MAIN=$(git branch-get-default) && git main && git pull && git switch $CURRENT && git rebase $MAIN'
  
  ci = commit
  amend = commit --amend
  fast-amend = !git add . && git commit --amend --no-edit

  pushup = !git rev-parse --abbrev-ref HEAD | xargs git push -u origin $1
  pushupf = !git rev-parse --abbrev-ref HEAD | xargs git brd $1 | xargs git push -u origin $1
  
  df = diff
  dfc = diff --cached
  dfs = diff --stat
  changes = diff --name-status
  
  br = branch
  brd = !sh -c 'git push origin :$1' - 
  bra = branch -a
  branch-current = rev-parse --abbrev-ref HEAD
  branch-get-default = !git symbolic-ref refs/remotes/origin/HEAD | sed 's@^refs/remotes/origin/@@'
  bra-date = branch -a --sort=-committerdate --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(committerdate:relative)'
  bra-date-full = branch -a --sort=-committerdate --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(committerdate:relative) \n\t %(contents:subject) - %(authorname) - %(color:red)sha:%(objectname)%(color:reset)'
  
  track = update-index --no-assume-unchanged
  untrack = update-index --assume-unchanged
  untracked = !git ls-files -v | grep "^[[:lower:]]"
  unstash = stash apply
  
  last = log -n 3
  lc = !git oneline ORIG_HEAD.. --stat --no-merges
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all --date=local
  oneline = log --pretty=oneline --abbrev-commit --graph
  who = shortlog -sne
[core]
  excludesfile = /path/to/global/.gitignore
[pull]
  rebase = true
[http]
  proxy = http://proxy-host:port
[https]
  proxy = http://proxy-host:port
[user]
  name = Pierrick Rassat
  email = pierrick.rassat@gmail.com
