export M2_HOME=$HOME/apache-maven/current
export M2=$M2_HOME/bin
export MAVEN_OPTS="-Xms256m -Xmx1024m"
export PATH="$M2:$PATH"
export DOCKER_HOST="unix://$XDG_RUNTIME_DIR/podman/podman.sock"
export PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"

alias git-scalafmt-amend="sbt scalafmtAll; git add .; git amendf; git pushf"
alias git-prettier-amend="mvn prettier:write; git add .; git amendf; git pushf"
alias sbt-deprecation="sbt '; set ThisBuild/scalacOptions ++= Seq(\"-unchecked\", \"-deprecation\") ; test'"

kk-open-tracking-mrs() {
  urls=(
    "http://gitlab.corp.kelkoo.net/dashboard/merge_requests?assignee_username=rassatpi"
    "http://gitlab.corp.kelkoo.net/groups/tracking/-/merge_requests"
    "http://gitlab.corp.kelkoo.net/k8s/k8stracking/-/merge_requests"
    "http://gitlab.corp.kelkoo.net/common/kelkoo-kafka-scala/-/merge_requests"
    "http://gitlab.corp.kelkoo.net/common/java-processing-healthcheck/-/merge_requests"
    "http://gitlab.corp.kelkoo.net/common/kelkoo-default-renovate-config/-/merge_requests"
  )
  nohup firefox ${urls[@]} &> /dev/null
}
